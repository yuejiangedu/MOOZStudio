// @stylint off
@import url('~font-awesome/css/font-awesome.css');

// @stylint on
.fa {
    font-size: 14px;
    margin-right: 5px;

    // makes the font 33% larger relative to the icon container
    &.fa-lg {
        font-size: 1.33333333em;
        line-height: .75em;
        vertical-align: -15%;
    }

    &.fa-2x {
        font-size: 2em;
    }

    &.fa-3x {
        font-size: 3em;
    }

    &.fa-4x {
        font-size: 4em;
    }

    &.fa-5x {
        font-size: 5em;
    }
}

@keyframes fa-spin-reverse {
    0% {
        transform: rotate(359deg);
    }

    100% {
        transform: rotate(0);
    }
}

@keyframes fa-spin-reverse {
    0% {
        transform: rotate(359deg);
    }

    100% {
        transform: rotate(0);
    }
}

.fa-spin-reverse {
    animation: fa-spin-reverse 2s infinite linear;
}
