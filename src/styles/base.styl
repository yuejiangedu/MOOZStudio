// ==========================================================================
// Base styles: opinionated defaults
// ==========================================================================
body {
  margin: 0;
  font-family: Arial, 'Microsoft YaHei', 'San Francisco', 'PingFang SC';
  font-size: 13px;
  color: #222222;
  text-align: left;
  background-color: #ffffff;
  min-width: 960px;

  @media (max-width: 767px) {
    min-width: 0;
  }
}

/*
 * Remove text-shadow in selection highlight: h5bp.com/i
 * These selection rule sets have to be separate.
 * Customize the background color to match your design.
 */
::-moz-selection {
  background: #b3d4fc;
  text-shadow: none;
}

::selection {
  background: #b3d4fc;
  text-shadow: none;
}

/*
 * A better looking default horizontal rule
 */
hr {
  display: block;
  height: 1px;
  border: 0;
  border-top: 1px solid #ccc;
  margin: 1em 0;
  padding: 0;
}

/*
 * Remove the gap between images, videos, audio and canvas and the bottom of
 * their containers: h5bp.com/i/440
 */
audio, canvas, img, svg, video {
  vertical-align: middle;
}

/*
 * Remove default fieldset styles.
 */
fieldset {
  border: 0;
  margin: 0;
  padding: 0;
}

/*
 * Remove default button styles.
 */
button {
  outline: none;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  line-height: 14px;
  box-shadow: 0 0 0 rgba(0, 0, 0, .045);
  padding: 0 15px;
  height: 32px;
  color: #fff;
}

/*
 * Remove default li styles.
 */
ul, li {
  padding: 0;
  margin: 0;
  list-style: none;
}

/*
 * Remove default label and p styles.
 */
label, p {
  margin-bottom: 0;
}

/*
 * Allow only vertical resizing of textareas.
 */
textarea {
  resize: vertical;
}

/*
 * Mooz View
 */
.mooz-content {
  height: 100%;
  background-color: #FAFDFF ;
}

.mooz-option-sider {
  box-shadow: 2px 2px 7px rgba(153, 153, 153, .2);
  margin: 10px 20px 10px 10px;
  background-color: #ffffff !important;
  border-radius: 4px;
  // box-sizing: content-box !important;
  // padding: 18px 20px;
  overflow-y: auto;
  // overflow-x: hidden;
  box-sizing: content-box !important;
  padding: 18px 20px;

  >div {
    width: 302px;
    margin: 0;
  }
}

.mooz-content-box {
  box-shadow: 2px 2px 7px rgba(153, 153, 153, .2);
  margin: 10px;
  border-radius: 4px;
  background-color: #FAFDFF;
  overflow: hidden;
  min-width: 600px;
}

.visualizer-tool {
  padding-left: 10px;
  background-color: #fff;
  border-bottom: 1px solid #d8d8d8;
  height: 40px;
}

/*
 * Ant Global CSS
 */
.ant-btn-primary {
  background-color: #2A7DE1;
  font-size: 14px;
  line-height: 14px;
  color: #fff;

  &:focus {
    background-color: #2A7DE1;
  }
}

.ant-radio-group {
  margin-top: 8px;
  padding-left: 10px;
}

.ant-select-selection--single {
  height: 26px;

  .ant-select-selection__rendered {
    line-height: 26px;
  }
}

.ant-select-selection {
  border: 1px solid #C7C7C7 !important;
  box-shadow: none !important;
}

.ant-select.deep-border .ant-select-selection {
  border: 1px solid #8F99A6 !important;
}

.ant-select.ant-select-open .ant-select-selection {
  border: 1px solid #2A7DE1 !important;
}

.ant-select-dropdown-menu-item-active.ant-select-dropdown-menu-item {
  background: rgba(50, 130, 255, .1);
}

.ant-select-dropdown-menu-item-selected.ant-select-dropdown-menu-item {
  background: rgba(50, 130, 255, .2);
}

.ant-input {
  height: 26px !important;
  min-height: 26px !important;
  border-color: #C7C7C7 !important;
  box-shadow: none !important;

  &:hover, &:focus {
    border-color: #2A7DE1 !important;
  }

  input {
    height: 24px !important;
    line-height: 24px !important;
  }
}

.ant-input-number {
  height: 26px !important;
  border-color: #C7C7C7;
  box-shadow: none !important;

  &:hover, &:focus {
    border-color: #2A7DE1 !important;
    box-shadow: none;
  }

  input {
    height: 24px;
    line-height: 24px;
  }

  .ant-input-number-handler-wrap {
    width: 10px;

    .ant-input-number-handler-up-inner, .ant-input-number-handler-down-inner {
      left: -20%;
    }
  }
}

.ant-modal-footer {
  border-top: none;
}

.ant-slider {
  height: 26px;
  margin: 0;
  padding: 0;
  padding-top: 12px;

  .ant-slider-track {
    background-color: #3188E5;
  }

  .ant-slider-handle {
    border-color: #3188E5;
  }
}

.ant-progress-circle .ant-progress-text {
  color: #fff;
}

.ant-progress-line .ant-progress-bg {
  height: 14px !important;
}

.ant-progress-line .ant-progress-inner {
  background-color: #4F5457;
}

.ant-slider-vertical .ant-slider-rail, .ant-slider-vertical .ant-slider-track {
  width: 8px;
}

.ant-slider-vertical .ant-slider-handle {
  margin-left: -3px;
}

.ant-checkbox.ant-checkbox-checked .ant-checkbox-inner {
  background-color: #fff;
  border-radius: 2px;
  border: 1px solid #3282FF;

  &::after {
    border-color: #3282FF;
    border-width: 1px;
  }
}

.ant-checkbox-checked::after {
  border: none;
}

.ant-modal-footer {
  padding: 8px 24px 20px;

  button {
    margin-left: 16px;
  }
}

/*
 * scrollBar CSS
 */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-thumb {
  background-color: #F4F4F4;
  opacity: .4;
  border-radius: 5px;
}

/*
 * MOOZ font-face
 */
@font-face {
  font-family: Alibaba-PuHuiTi-H;
  font-style: normal;
  font-weight: normal;
  src: url('../fonts/Alibaba-PuHuiTi-Heavy.ttf');
}
