.container {
  display: flex;
  line-height: 38px

  >span {
    display: flex;
  }

  .display {
    display: inline-block;
  }

  button {
    text-align: center;
    height: 39px;
    background-color: #fff;
    padding: 4px 12px;
    border: 0;
    border-radius: 0;
    margin: 0;
    outline: none;
    margin: 0 5px 0 0;
  }
  @media screen and (max-width:1500px) {
    button {
      padding: 4px 8px;
    }  
  }

  img {
    width: 20px;
    height: 20px;
  }

  .btntag {
    height: 38px;
    display: flex;
    align-items: center;
  }

  .dropdown {
    img {
      display: inline-block;
      margin-right: 5px;
    }
  }
}