.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.dro-display {
    border: 1px solid #ccc;
    text-align: right;
    padding: 5px 10px;
    height: 32px;
    font-size: 18px;
    font-weight: bold;
    margin-right: 5px;
}
.dro-btn-group {
    margin-left: 5px;
}

.panel {
    margin-bottom: 10px;

    &:last-child {
        margin-bottom: 0;
    }
}
.panel-heading:hover {
    background-color: rgba(0, 0, 0, .05);
}

.content-wrap{
  >div{
    margin-bottom 7px
    width 100%
    display: flex
    justify-content: space-between
    font-size 14px
    align-items: center;
    .input-number{
      width 50px
      font-size 12px
      input{
        padding-left 4px
      }
  
    }
  
  }
}


 