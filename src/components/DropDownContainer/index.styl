.drop-down-container {
  >header {
    padding: 20px 5px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
    color: #333333;
    width: 100%;

    >section {
      display: flex;
      align-items: center;
      margin: 0;
    }

    i {
      width: 12px;
      height: 12px;
      color: #8F99A6;
    }
  }

  >section {
    padding: 30px 20px;
  }
}