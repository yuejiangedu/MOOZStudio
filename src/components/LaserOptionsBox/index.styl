.laserOption{
  .laser-beauty-type{
     width: calc( 100% + 10px )
     margin: 0 0 10px -10px
     display: flex
     >label{
       flex 1
       margin 0
       text-align center;
       background-color #DBE9FF;
       color:#839ABF
     }
  }
  label {
    text-align  left;
    width 105px
    margin-right 5px
    word-wrap:break-all
    margin-bottom 0
  }
  section {
    display flex;
    align-items: center;
    margin-bottom 10px

    >div {
      flex 1;
      margin-right 10px
    }
  }
  .slider{
    display flex;
    align-items: center;
    height 50px
    >div{
      flex 1
    }

  }
  input{
    outline: 0;
    border-radius: 4px;
    border: 1px solid #c8cccf;
    padding-left: 10px;
    max-width: 98px;
    height: 25px;
    color: rgba(0, 0, 0, 0.65);
    margin-right: 7px
  }
  input:disabled{
    background-color: #f5f5f5
    color: rgba(0,.0,.0, 0.25)
  }
}