.default-picture-container {
  padding: 0;
  overflow-y: scroll;
  margin: 0 -20px;

  .default-picture {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    max-height: 347px;
    overflow-y: scroll;

    section {
      > div {
        display: flex;
        margin: 5px;
        border: 1px solid #ccc;
        height: 96px;
        padding: 8px 3px;
        border: 2px solid rgba(0, 0, 0, .15);
        border-radius: 2px;
        overflow: hidden;
        justify-content: center;

        &:hover {
          border: 2px solid #2A7DE1;
          cursor: pointer;
        }

        svg {
          width: 100%;
          height: 100%;
        }
      }
    }
  }
}
