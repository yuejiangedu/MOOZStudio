.laserOption{
  section {
    display flex;
    align-items: center;
    margin-bottom 10px
    label {
      width 115px;
      text-align  left
      padding-right 10px
      margin-bottom 0
    }
    >div {
      flex 1;
      margin-right 10px
    }
  }
  .slider{
    display flex;
    align-items: center;
    height 50px
    label{
      width 115px
      text-align  left
      padding-right 10px
      margin-bottom 0
    } 
    >div{
      flex 1
    }
  }
  .select-option{
    display flex
    padding-bottom 10px
    .active{
      img{
        border 2px solid #3282ff
      }
    }
    button {
      height 160px
      flex 1
      outline:none
      display flex
      flex-direction column
      align-items: center
      background-color:#fff
      user-select: none
      border none
      box-shadow: 0 0 0 rgba(0,0,0,0.045);
      &:first-child{
        margin-right 10px;
      }
      img {
        border 2px solid rgb(216, 216, 216);
        border-radius 8px;
      }
      p{
        padding-top 10px
        color: #5c5c5c
      }
    }
  }
}