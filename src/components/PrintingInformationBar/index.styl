.printing-information-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 39px;
  border-top: 2px solid #f1f1f1;
  justify-content: space-between;
  padding: 0 16px 0 18px;
  background-color: #fff;
}

.gcode-information {
  display: flex;
  align-items: center;

  >div {
    display: flex;
    align-items: center;
    margin-left: 40px;
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;

    >span {
      margin-left: 8px;
    }
  }
}

.model-information {
  display: flex;
  align-items: center;

  >label {
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
    height: 24px;
    line-height: 24px;
    margin: 0;
    margin-right: 14px;
    max-width: 400px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  >span {
    font-size: 12px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #5C5C5C;
    height: 20px;
    line-height: 20px;
  }
}