.title-span {
  width: 15px;
  height: 16px;
  margin-left: 8px;
  text-align: center;
  border: 1px solid rgba(23, 130, 229, .1);
  border-radius: 50%;
  font-size: 12px;
  cursor: pointer;
  background-color: rgba(23, 130, 229, .1);
  display: block;
  position: relative;

  &:hover .infos {
    display: inline-block;
  }

  .infos {
    display: none;
    background-color: #fff;
    position: fixed;
    transform: translateX(-65%);
    z-index: 250;
    margin-top: 23px;
    box-shadow: 0 3px 6px -4px rgba(0, 0, 0, .12), 0 6px 16px 0 rgba(0, 0, 0, .08), 0 9px 28px 8px rgba(0, 0, 0, .5);
    border-radius: 2px;
    min-width: 302px;

    &::after {
      content: '';
      width: 0;
      height: 0;
      border-width: 5px;
      border-style: solid;
      border-color: #fff #fff transparent transparent;
      box-shadow: 0 6px 16px 0 rgba(0, 0, 0, .08), 0 3px 6px -4px rgba(0, 0, 0, .12), none, none;
      transform: rotate(-45deg);
      position: absolute;
      top: -5px;
      left: 62.4%;
      z-index: 260;
    }

    &:hover {
      display: inline-block;
    }

    section:first-child {
      font-size: 12px;
      float: left;
      font-weight: 550;
      margin: 10px 0 5px 15px;
      text-align: left;
      font-size: 14px;
      color: rgba(0, 0, 0, .85);
    }

    section:last-child {
      float: left;
      margin: 0 15px 15px;
      text-align: left;
      font-size: 14px;
      color: rgba(0, 0, 0, .65);
    }
  }
}
