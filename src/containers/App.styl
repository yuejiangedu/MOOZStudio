@import "variables";

.sidebar {
    background-color: $sidebar-background-color;
    position: fixed;
    top: $navbar-height;
    left: 0;
    bottom: 0;
    width: $sidebar-width;
    z-index: 1000;
}

.main {
    position: absolute;
    top: $navbar-height;
    left: $sidebar-width;
    right: 0;
    bottom: 0;
    background-color: $content-background-color;
    min-width: $content-min-width;
    height 'calc(100% - %s)' % ($navbar-height)
}

.content {
    height 100%;
    background-color: $content-background-color;  
}
