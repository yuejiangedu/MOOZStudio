
.right-control-box{
  float right;
}

.btn-icon {
    color: #444;
    &:hover,
    &:focus {
        color: #222;
    }
}

.quick-access-toolbar {
    margin: 10px 0 10px 15px;

    @media (min-width: 768px) {
        float: right;
    }

    :global {
        .btn-group {
            float: left;
            margin-right: 10px;
        }
        .btn {
            height: 30px;
        }

        // Remove the outline on buttons
        button:focus {
            outline: 0;
        }
    }
}
