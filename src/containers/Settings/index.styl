.col {
    display: table-cell;
}

.navbar {
    position: relative;
}

.nav {
    padding-left: 0;
    margin-bottom: 0;
    list-style: none;

    > li {
        position: relative;
        line-height 50px
        display flex;
        font-size 14px
        font-weight 600;
        >i {
          width 60px
          display flex
          justify-content: center;
          align-items: center
          object{
            filter:grayscale(1)
          }
        }
        > a {
            flex 1
            position: relative;
            display: block;
            color: #000;
            text-decoration: none;
            white-space: nowrap;
        }
    }
    > li.active {
        object{
          filter:grayscale(0)
        }
        > a,
        > a:focus,
        > a:hover {
            color: #2A7DE1;
        }
    }
}

