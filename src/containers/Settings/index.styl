.settings {
    height calc(100% - 50px)  ;
    padding: 40px 20px 73px 10px;
    margin 0px 0px 10px 0px
    background-color #fafdff;
 
    header{
      border-radius 4px 4px 0 0
      overflow hidden
      font-size 14px;
      color:#fff;
      text-align center;
      line-height 50px;
      height 50px;
      width 100%
      display block
      background-color #2A7DE1
    }
}

.container {
    display: flex;
    width: 100%;
    height 100%;
    padding 10px
    box-shadow 2px 2px 7px rgba(153,153,153,0.2);
    border-radius 0px 0px 4px 4px
}

