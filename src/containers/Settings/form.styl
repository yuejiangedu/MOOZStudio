//
// Form
//

.form-container{
  display flex
  flex-direction column
  section{
    box-shadow 2px 2px 7px rgba(153,153,153,0.2);
    border-radius 4px;
    margin-right 270px
  }
  footer{
    padding 80px 270px 0  0 
    img{
      float right
    }
  }
}

.form-fields {
    margin: 0;
}

.form-group {
    display flex  
    width 600px;
    height 50px
    align-items: center;
    padding 7px 30px;
 
    object{
      width 20px
    }
    >select{
      width 218px
      background-color #F1F3F4
      margin-right 0
      
    }
   >label{
     flex 1
     margin-bottom 0
     margin-left 30px
     font-weight 600
   }

    .form-control {
        width: 440px;
        max-width: 100%;
        margin-right: 10px;

        &.shorter {
            width: 130px;
        }
        &.short {
            width: 250px;
        }
        &.long {
            width: 100%;
        }
    }
}

.form-actions {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;

    display: none;
    padding: 0 15px;
    border-top: 1px solid #ccc;
    background: #f5f5f5;
    text-align: right;
    line-height: 50px;

    button + button {
        margin-left: 5px;
    }
}
